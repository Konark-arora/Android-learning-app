<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash" >

    <RelativeLayout
        android:id="@+id/splash_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash" >

        <ImageView
            android:id="@+id/mascot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/top_margin"
                    android:gravity="center_horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/appspartan_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/splash_a"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/appspartan_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-20dp"
                        android:src="@drawable/splash_p"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/appspartan_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-25dp"
                        android:src="@drawable/splash_p"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/top_margin"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/appspartan_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-15dp"
                        android:src="@drawable/splash_s"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/appspartan_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-15dp"
                        android:src="@drawable/splash_p"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/appspartan_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-7dp"
                        android:src="@drawable/splash_a"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/appspartan_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-10dp"
                        android:src="@drawable/splash_r"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/appspartan_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:src="@drawable/splash_t"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/appspartan_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-15dp"
                        android:src="@drawable/splash_a"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/appspartan_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:src="@drawable/splash_n"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>